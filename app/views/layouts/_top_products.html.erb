<ul class="list-group list-group-flush top-products">
  <a href="#" class="list-group-item disabled">
    Top Products
  </a>
  <% @top_products.each do |product| %>
      <li class="list-group-item list-group-item-action">
        <h5 class="list-group-item-heading"> <%= product.title %> </h5>
        <%= image_tag product.photos.first.file(:thumb), class: 'img-responsive' %><br/>
        <%= render partial: 'layouts/rating', locals: { score: product.total_rating.to_i } %>
      <p class="list-group-item-text">
        <%= truncate product.description, length: 40 %>
      </p>
      <%= link_to 'read more', product_path(product), class: 'btn btn-secondary btn-sm' %>
    </li>
  <% end %>
</ul>
